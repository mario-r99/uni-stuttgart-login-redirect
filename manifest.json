{
  "manifest_version": 3,

  "name": "Uni Stuttgart Login Redirect",
  "description": "Automatically redirects to the login page in Ilias and Campus",
  "version": "1.3",
  "host_permissions": [
    "https://ilias3.uni-stuttgart.de/**",
    "https://campus.uni-stuttgart.de/**"
  ],
  "content_scripts": [{
    "matches": ["https://ilias3.uni-stuttgart.de/ilias.php?baseClass=ilrepositorygui**"],
    "js":      ["iliasRedirect.js"],
    "run_at": "document_end"
  },
  {
    "matches": ["https://campus.uni-stuttgart.de/**"],
    "js":      ["campusRedirect.js"],
    "run_at": "document_end"
  }]
}
